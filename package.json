{
  "name": "order-execution-engine",
  "version": "1.0.0",
  "description": "Day-1 scaffold for the Order Execution Engine",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc -p tsconfig.json && tsc-alias",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/websocket": "^8.3.1",
    "@meteora-ag/dynamic-amm-sdk": "^1.4.1",
    "@raydium-io/raydium-sdk-v2": "^0.2.30-alpha",
    "@solana/buffer-layout": "4.0.0",
    "@solana/buffer-layout-utils": "0.2.0",
    "@solana/spl-token": "^0.4.6",
    "@solana/web3.js": "^1.95.5",
    "bn.js": "^5.2.1",
    "bs58": "^6.0.0",
    "bullmq": "^5.7.15",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.29.1",
    "ioredis": "^5.4.1",
    "nanoid": "^5.0.7",
    "pg": "^8.16.3",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "tsc-alias": "^1.8.16",
    "ws": "^8.17.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bn.js": "^5.2.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.6",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.12",
    "jest": "^29.7.0",
    "jest-websocket-mock": "^2.5.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/__tests__"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "moduleNameMapper": {
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@controllers/(.*)$": "<rootDir>/src/controllers/$1",
      "^@dex/(.*)$": "<rootDir>/src/dex/$1",
      "^@queue/(.*)$": "<rootDir>/src/queue/$1",
      "^@routes/(.*)$": "<rootDir>/src/routes/$1",
      "^@services/(.*)$": "<rootDir>/src/services/$1",
      "^@repositories/(.*)$": "<rootDir>/src/repositories/$1",
      "^@type-defs/(.*)$": "<rootDir>/src/types/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@websockets/(.*)$": "<rootDir>/src/websockets/$1",
      "^@app$": "<rootDir>/src/app"
    }
  }
}
